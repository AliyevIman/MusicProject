@model LoginVM


@{
    Layout = "_LayoutAuth";
}

<div style="margin-top:10em">
    <div class="col-12 col-md-4 m-auto">
        <div class="d-flex justify-content-center m-4"><h1 class="m-4">Login</h1></div>
        <form method="post">
            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <span class="mb-3" asp-validation-for="Email"></span>
            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <span class="mb-3" asp-validation-for="Password"></span>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                  @*      <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                        <label for="agreeTerms">
                            I agree to the <a href="#">terms</a>
                        </label>*@
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
                <!-- /.col -->
            </div>
        </form>


    </div>
