                @foreach (var musician in ViewBag.Musician as List<Musician>)
                {
                    <option value="@musician.Id">@musician.Name</option>
                }
            </select>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form> 
    </div>
</div>

