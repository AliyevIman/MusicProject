@model Music

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Music</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicUrl" class="control-label"></label>
                <input type="file" asp-for="MusicUrl" class="form-control" />
                <span asp-validation-for="MusicUrl" class="text-danger"></span>
                  <audio controls>
                <source src="@Html.DisplayFor(model => model.MusicUrl)" type="audio/ogg">
                <source src="@Html.DisplayFor(model => model.MusicUrl)" type="audio/mpeg">
                    </audio> 
            </div>
            <div class="form-group">
                <label asp-for="MusicVideo" class="control-label"></label>
                <input asp-for="MusicVideo" class="form-control" />
                <span asp-validation-for="MusicVideo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
                <img src="@Html.DisplayFor(model => model.Photo)" width="100" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

